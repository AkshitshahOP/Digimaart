<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRCodeScanner">

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#C19A6B"
        android:text="Scan Trolley QR Code"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_BarcodeScan"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@+id/btn_scan"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="-15dp"
        android:layout_marginBottom="9dp"
        android:text="Lets Begin Shopping"
        android:textColor="#6E260E"
        android:textColorLink="#9C27B0"
        android:textSize="34sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/qrB" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="149dp"
        android:layout_height="742dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="271dp"
        android:layout_marginTop="-288dp"
        android:layout_marginEnd="-9dp"
        app:srcCompat="@drawable/QRC" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="149dp"
        android:layout_height="742dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="297dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="-35dp"
        app:srcCompat="@drawable/QRC" />


</RelativeLayout>